// 1. Configuración del Cliente (¡Esto faltaba!)
generator client {
  provider = "prisma-client-js"
}

// 2. Configuración de la Base de Datos (¡Esto también faltaba!)
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 3. Tu Modelo de Datos
model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  stock       Int      @default(0)
  imageUrl    String?
  category    String   @default("READY_MADE")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Tu campo SKU listo
  sku         String   @unique @default(cuid())   
}