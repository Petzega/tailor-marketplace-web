// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  stock       Int      @default(0)
  imageUrl    String?
  category    String   @default("READY_MADE")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}